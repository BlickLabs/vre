body
  font-size $mainFontSize
  font-family 'Open Sans'
  
a, a:hover, a:active
  text-decoration none !important
  
.orange-button
  simple-border('all', 2px, $orange)
  color $orange !important
  display inline-block
  padding 18px 50px
  width auto
  
footer
  background $orange
  color white
  padding 75px 60px 50px 60px
  
  .footer-container
    align-items center
    display flex
    
    .footer-col
      width 33.333333%
    
      &:first-child
        margin-right 30px
        
      &:last-child
        margin-left 30px
      
      a
        color white
        
    .footer-logo
      width 60%
      
    .footer-logo-legend
      display block
      font-size 16px
      
  #footer-newsletter-form
    input[type="email"]
      background rgba(white, 0.3)
      simple-border('all', 1px, white)
      display block
      font-weight $fontLight
      margin-top 8px
      max-width 272px
      padding 10px 16px 12px 16px
      width 100%
      
      &::placeholder
        color white
        
@media screen and (max-width: 768px)
  footer
    padding 30px 0

    .footer-container
      display block
      
      .footer-col
        display block
        margin 60px auto !important
        text-align center
        width 90%
        
        &#footer-newsletter-form input
          center-block()
        
        .footer-logo
          max-width 400px
          min-width 240px