.development-cover
  height 60vh
  min-height 450px
  position relative
  
  img
    bottom 15px
    display block
    left 50%
    height auto
    max-height 150px
    max-width 99%
    position absolute
    transform translateX(-50%)
    width auto
    
.development-header-text
  font-size $sectionTitleSize
  line-height 1.25
  center-block()
  max-width 450px
  min-width 280px
  margin-bottom 90px
  margin-top 90px
  width 50%
  
.development-download-brochure
  simple-border('leftright', 10px, $orange)
  line-height 1.25
  padding 40px 0

  div
    center-block()
    max-width 450px
    min-width 280px
    text-align center
    width 50%
    
    span
      display block
      font-size $sectionTitleSize
      
    input
      display block
      font-weight $fontLight
      center-block()
      margin-top 40px
      min-width 280px
      padding 14px 10px
      text-align center
      width 85%
      
      &:focus
        outline none
    
    a
      border none !important
      display inline-block
      margin-top 40px
      padding 12px 20px !important
      width 170px
      
.development-360-video
  padding 50px 20px
  
  .container-360
    center-block()
    margin-top 20px
    max-width 900px
    min-width 280px
    width 80%
    
.development-characteristics
  font-size $sectionTitleSize
  margin-left 10%
  margin-top 20px
  width 90%
  
  .development-characteristics-items
    clear both
    display block
    font-size $mainFontSize
    list-style none
    margin-bottom 80px
    margin-left -40px
    margin-top 50px

    .development-characteristics-item
      display inline-block
      margin 9px 0
      width 32.5%
      
      img
        height 23px
        margin-right 22px

      span
        flex-grow 1
      
.development-carousel
  background white
  
.development-drawings
  display flex
  margin 10px 0
  
  .drawing-selectors
    width 150px
    
    .drawing-selector
      background transparent
      color $darkGray
      cursor pointer
      font-size 33px
      font-weight $fontExtraBold
      height 150px
      line-height 150px
      transition all .2s
      width 150px
      
      &:hover, &.active
        background $lightGray
        color white
      
  .drawing-picture
    background $orange
    color white
    flex-grow 1
    font-size 24px
    font-weight $fontSemiBold
    padding 40px 60px
    
    img
      display block
      margin-top 15px
      width 100%
    
.development-nearby-places
  display flex
  
  .location-map
    background $lighterGray
    flex-grow 1
    
  .points-of-interest
    padding 60px
    width auto
    
    >span
      font-size $sectionTitleSize
      font-weight $fontSemiBold
    
    ul
      font-size 17px
      list-style none
      margin-left -40px
      margin-top 28px
      
      li
        &:not(:first-child)
          margin-top 5px
      
        img
          height 25px
          margin-right 18px

        span
          flex-grow 1
        
.development-public-transport
  font-size 17px
  padding 70px 20px 90px 20px
  
  .transport-title
    font-size $sectionTitleSize
    font-weight $fontSemiBold
    
    img
      height 28px
      margin-right 10px
    
  .transport-items-container
    center-block()
    margin-top 35px
    text-align center
    width 890px
    
    .transport-items-column
      display inline-block
      max-width auto
      text-align left
      vertical-align middle
      width 430px
      
      &:nth-child(2)
        float right
      
      .transport-item
        margin 8px 0
        
        .appstore-download
          margin-top -6px
          width 80px

.development-built-by
  font-size 16px
  font-weight $fontBold
  text-align center
  padding 60px 20px
  
  img
    margin-left 5px
    width 180px