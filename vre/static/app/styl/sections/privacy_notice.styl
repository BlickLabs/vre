.privacy-notice-container
  center-block()
  padding-bottom 100px
  padding-top 80px
  max-width 920px
  width 80%
  
  h2
    color $gray
    margin-bottom 75px
    text-align center
    
  >b
    display block
    margin-bottom 10px
    
  p, ol
    line-height 1.6
    margin 25px 0
    
  ol
    counter-reset a
    list-style none
    margin-left -40px
    min-width 280px
    width 80%
    
    li::before
      counter-increment a
      content counters(a,'') '. '
  
@media screen and (max-width: 767px)
  .privacy-notice-container
    padding-bottom 50px
    padding-top 40px
    
    h2
      font-size 24px
      margin-bottom 40px