.about-us-cover
  background-image url('../img/homepage_cover.jpg')
  color white
  font-size 25px
  height 50vh
  line-height 1.3
  min-height 500px
  
  p
    margin-left 370px
    margin-right 100px
    padding-top 100px
    
    img
      display block
      margin-bottom 25px
      width 80px
  
.about-us-container
  background transparent
  
  .about-us-content
    margin-left 180px
    margin-right 0
    margin-top -100px
    
    .introductory-text
      align-items stretch
      display flex
      width 100%
      
      .image-part
        margin-top -70px
        
        img
          width 150px
        
      .text-part
        background white
        color #848383
        display block
        flex-grow 1
        padding 60px 160px 80px 70px
        height 100%
        
        p:first-child
          line-height 1.85
          
        p:nth-child(2)
          font-size 23px
          font-weight $fontSemiBold
          margin 30px 0
          
        p:nth-child(3)
          line-height 1.6
    
    .secondary-cover
      background-image url('../img/homepage_cover.jpg')
      height 30vh
      position relative
      
      img
        bottom -25px
        position absolute
        right 0
        width 45px
      
    .gray-container
      padding 20px