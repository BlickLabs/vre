.developments-gray-divider
  padding-top 60px

  p
    center-block()
    max-width 650px
    width 80%

  h1
    color $gray
    display block
    font-size $mainTitle
    margin-bottom 25px
    margin-top 5px

.developments-items
  display flex
  flex-wrap wrap
  justify-content space-around
  width 90%
  max-width 830px
  margin-top 15px
  margin-bottom 53px
  center-block()

.development-item
  font-size 14px
  color white
  flex-basis 386px
  text-align center
  margin-top 3.21em

  &:nth-child(2n + 1)
    background $orange

  &:nth-child(2n)
    background #f4b183

.development-item-cover
  display block
  height 204px

.development-item-info
  padding 0.5em 0 1em 0
  letter-spacing -0.6px

  a
    color white

.development-item-name
  display block
  center-block()
  margin-bottom 0.3em
  width 86%

.developments-map
  font-size 18px
  center-block()
  max-width 800px
  width 90%
  text-align center

  #location-map
    height 100%

  h2
    font-size inherit
    margin-bottom 1.5em
    font-weight $fontBold

@media $smallBase
  .developments-gray-divider
    padding-top 40px

    p .title
      font-size 24px

@media screen and (max-width: 430px)
  .development-item-cover
    flex-basis 100%
    height 48.26vw