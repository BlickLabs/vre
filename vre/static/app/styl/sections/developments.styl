.developments-gray-divider
  padding 80px 0
  
  p
    center-block()
    max-width 650px
    width 80%

  h1
    color $gray
    display block
    font-size $mainTitle
    margin-bottom 25px
    margin-top 5px

.developments-cover-divider
  min-height 500px

  .text-part
    padding 100px 0

    img
      display block
      center-block()
      padding-bottom 40px
      width 60%
    
    .vre-inverse-button
      padding-bottom 14px
      padding-top 14px
  
  &:nth-child(2n)
    flex-direction row-reverse
    
  &:nth-child(2n + 1)
    .cover
      background-position left
    
  &:not(:first-child)
    margin-top 120px
  
@media $smallBase
  .developments-gray-divider
    padding 60px 0
    
    p .title
      font-size 24px
      
  .developments-cover-divider
    margin-top 70px