.contact-form
  center-block()
  max-width 480px
  min-width 280px
  padding-bottom 80px
  padding-top 60px
  width 40%
  
  .title
    font-size 23px
    line-height inherit
    margin-bottom 40px
    margin-top 0
    min-width 280px
    width 60% 
    
  .vre-input
    margin-top 15px
    min-width 280px
    width 80%

    &::placeholder
      font-weight $fontLight
      
  textarea.vre-input
    height 200px
    width 100%
    
  .button-container
    margin-top 30px
    min-width 280px
    text-align center
    width 80%

  .vre-inverse-button
    padding-bottom 10px
    padding-top 10px
    
@media screen and (max-width: 767px)
  .contact-form
    padding-bottom 40px
    padding-top 30px
    
    .title
      font-size 20px
      margin-bottom 30px
      text-align center