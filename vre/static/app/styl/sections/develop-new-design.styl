// Global styles.

.line
  width 58px
  border-bottom 3px solid #dedede
  margin-top 15px;
  margin-right 0

.btn--cotizar
    display block
    max-width 150px
    color #ffffff
    font-size 12px
    font-weight 600
    letter-spacing 0.3px
    padding 12px 21px
    background-color #de7c27
    margin-top 23px
    text-align center
    margin-left auto
    margin-right auto

  .btn--cotizar:hover
    background-color #ffffff
    outline 2px solid #dedede
    color #de7c27
    transition all 1s

// Cover
.vre-develop-cover
  background-image url('../img/vre/vre-desarrollo-beistegui.png')
  background-repeat no-repeat
  background-position center
  background-size cover
  padding-top 40px
  padding-bottom 78px

  .cover-title,
  .cover-subtitle
    text-align center
    color #2b2b2b

  .cover-title
    font-size 27px
    font-weight bold
    letter-spacing 1.5px
    text-transform uppercase

  .cover-subtitle
    font-size 17px
    letter-spacing 0.7px


// Department & ubication
.vre-develop-department-ubication
  padding-top 5rem
  padding-bottom 5rem
  display flex

  h3
    font-size 18px
    font-weight bold
    letter-spacing 1.8px
    color #444444
    text-transform uppercase
    margin-top 1rem;
    margin-bottom 3rem

  .develop-department
    border-right 1px solid #e8e8e8

  .develop-department,
  .develop-ubication
    flex-basis 50%
    padding-left 70px
    padding-right 70px

  .department-icons

    .icons-list
      padding 0
      list-style none
      display flex
      justify-content flex-end
      align-items center
    
    .list-item
      background-color #676767
      width 69px
      height 58px
      margin-left 17px
      display flex
      flex-direction column
      justify-content center
      align-items center 

      img 
        max-width 17px
        display block
        margin-left auto
        margin-right auto

      img:hover
        -webkit-animation: pulse 1s;
        animation: pulse 1s;

      p
        margin-top 3px 
        margin-bottom 0
        color #ffffff
        font-size 8px
        letter-spacing 0.2px
        text-align center

  .department-num-img
    display flex
    align-items center
    justify-content space-between

    .department-num
      flex-basis 13%

      .num-list
        list-style none
        padding 0
        display flex
        flex-direction column

        li
          outline 1px solid #dedede
          padding 7px 9px
          text-align center
          margin-bottom 7px
          font-weight bold
          letter-spacing 0.3px
          font-size 11px
          cursor pointer

        li:hover
          color #ffffff
          background-color #e18a3e
          box-shadow 0 1px 9px 0 rgba(0, 0, 0, 0.32)
          border none
          animation pulse 1s

        li.active
          color #ffffff
          background-color #e18a3e
          box-shadow 0 1px 9px 0 rgba(0, 0, 0, 0.32)
          border none

    .department-img
      flex-basis 77%

      img 
        width 100%
        display block

  .develop-ubication

    h3
      text-align right 
      
      .line
        margin-left calc(100% - 58px)

    .map
      background-color #f5f5f5
      height 80%
    
    .location-map
      height 100%

// Characteristics
.vre-characteristics-wrapper
  margin-top 3rem

  .vre-characteristics
    padding-top 3rem
    padding-bottom 5rem 
    border-top 1px solid #e8e8e8
    width 95%;
    margin-left auto
    margin-right auto

    .line
      margin-left auto
      margin-right auto
      margin-top 3rem
      margin-bottom 3rem

    h4
      color #444444
      letter-spacing 1.8px
      font-size 20px
      text-align center
      text-transform uppercase

      span
        font-weight bold
    
    ul
      padding 0
      list-style none
      display flex
      justify-content center
      align-items center

      li
        
        width 91px
        height 91px
        margin-left 39px

        .img-wrapper
          width: 76px
          height 76px
          border 1px solid #f1f1f1
          display flex
          justify-content center
          align-items center
          margin-left auto
          margin-right auto

        p
          color #444444
          font-size 11px
          letter-spacing 0.3px
          text-align center
          margin-top 10px
          font-weight 600

        

        img 
          display block

        img:hover
          -webkit-animation: pulse 1s;
          animation: pulse 1s;

// Download brochure 
.development-download-brochure
  border none !important 
  background-color: rgba(216, 216, 216, 0.75);

// Video 360
.development-360-video
  border 4rem solid #ffffff
  background-color #f5f5f5
  font-weight 600
  font-size 18px
  letter-spacing: 0.1px
  color #2b2b2b

  .btn--cotizar
    margin-bottom 2rem    

// Gallery
.vre-gallery
  padding-top 4rem

  ul
    padding 0
    list-style none
    display flex
    flex-wrap wrap
    justify-content center
    align-items center

    li
      flex-basis 28%
      margin 1.5rem

      img
        display block
        width 100%
        cursor pointer

      img:hover
        animation pulse 1s
        opacity .75

// Modal gallery
.vre-gallery-modal
  display none
  z-index 100
  position fixed
  top 0
  left 0
  right 0
  width 100vw
  height 100vh
  background-color rgba(0, 0, 0, 0.85)
  justify-content center
  align-items center

  .modal-close
    color #ffffff
    font-size 4rem
    position absolute
    top 1%
    right 5%
    cursor pointer

  .modal-content
    display block
    width 80%
    max-width 700px

    img
      display block
      width 100%


