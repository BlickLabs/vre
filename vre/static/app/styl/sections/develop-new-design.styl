// Global styles.

.line
  width 58px
  border-bottom 3px solid #dedede
  margin-top 15px;
  margin-right 0

.btn--cotizar
    display block
    max-width 150px
    color #ffffff
    font-size 12px
    font-weight 600
    letter-spacing 0.3px
    padding 12px 21px
    background-color #de7c27
    margin-top 23px
    text-align center
    margin-left auto
    margin-right auto

  .btn--cotizar:hover
    background-color #ffffff
    color #de7c27
    transition all .5s

// Cover
.vre-develop-cover
  background-image url('../img/vre/vre-desarrollo-beistegui.png')
  background-repeat no-repeat
  background-position center
  background-size cover
  padding-top 40px
  padding-bottom 78px

  .cover-title,
  .cover-subtitle
    text-align center
    color #2b2b2b

  .cover-title
    font-size 27px
    font-weight bold
    letter-spacing 1.5px
    text-transform uppercase

  .cover-subtitle
    font-size 17px
    letter-spacing 0.7px


// Department & ubication
.vre-develop-department-ubication
  padding-top 5rem
  padding-bottom 5rem
  display flex

  h3
    font-size 18px
    font-weight bold
    letter-spacing 1.8px
    color #444444
    text-transform uppercase
    margin-top 1rem;
    margin-bottom 3rem

  .develop-department
    border-right 1px solid #e8e8e8

  .develop-department,
  .develop-ubication
    flex-basis 50%
    padding-left 70px
    padding-right 70px

  .department-icons

    .icons-list
      padding 0
      list-style none
      display flex
      justify-content flex-end
      align-items center
    
    .list-item
      background-color #676767
      width 69px
      height 58px
      margin-left 17px
      display flex
      flex-direction column
      justify-content center
      align-items center 

      img 
        max-width 17px
        display block
        vertical-align middle
        margin-left auto
        margin-right auto

      p
        margin-top 3px 
        margin-bottom 0
        color #ffffff
        font-size 8px
        letter-spacing 0.2px
        text-align center

  .department-num-img
    display flex
    align-items center
    justify-content space-between

    .department-num
      flex-basis 13%

      .num-list
        list-style none
        padding 0
        display flex
        flex-direction column

        li
          border 1px solid #dedede
          padding 7px 9px
          text-align center
          margin-bottom 7px
          font-weight bold
          letter-spacing 0.3px
          font-size 11px
          cursor pointer

        li.active
          color #ffffff
          background-color #e18a3e
          box-shadow 0 1px 9px 0 rgba(0, 0, 0, 0.32)
          border none

    .department-img
      flex-basis 77%

      img 
        width 100%
        display block

  .develop-ubication

    h3
      text-align right 
      
      .line
        margin-left calc(100% - 58px)

    .map
      background-color #f5f5f5
      height 80%
    
    .location-map
      height 100%
