.investor-documents
  padding-bottom 70px
  padding-top 40px
  
  h1
    color $gray
    font-size 30px
    margin-bottom 50px
    text-align center
    
  .table-responsive
    center-block()
    max-width 1000px
    width 80%
    
    thead
      background $orange
      border-color #ccc
      border-style solid
      border-width 0 0 2px 0
      
    tr th
      color white
      font-weight $fontSemiBold
      vertical-align middle
      padding-bottom 15px
      padding-top 15px

    thead, tbody
      tr
        td, th
          border none
          text-align center
          
          &:first-child
            padding-left 30px
            
          &:last-child
            padding-right 30px
    
    tbody tr td
      padding-top 40px
      
    .download-document
      font-family 'Open Sans'
      
      &::before
        font-family 'FontAwesome'
        margin-right 6px