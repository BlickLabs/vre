.homepage-cover
  background-image url('../img/homepage_cover.jpg')
  simple-border('bottom', 4px, $orange)
  color white
  height 80vh
  min-height 480px
  position relative
  width 100%
  
  .phone-box
    position relative
    text-align right
    width 100%
    
    .phone-box-content
      background $orange
      color white !important
      display inline-block
      font-size 13px
      padding 15px 40px
      right 0
      text-align center
      top 0
      
      .big-text
        display block
        font-size 25px
        font-weight $fontSemiBold
        line-height 1
        
    &.fix-in-top
      height 73px
      position fixed
      right 0
      top 0
      width auto
      z-index 11
  
  .homepage-menu
    center-block()
    margin-top 10px
    max-width 500px
    text-align center
    width 90%
    
    .logo-container
      font-family 'Oswald'
      font-size 42px
      
      img
        height 58px
        margin-right 10px
        vertical-align top
        
      .show-in-fixed
        display none

    .menu-list
      font-size 15px
      font-weight $fontSemiBold
      list-style none
      margin-left -40px

      li
        display inline-block
        
        &:not(:last-child)::after
          content ' | '
        
        a
          display inline-block
          color white
    
    &.fix-in-top
      background white
      box-shadow 0 0 5px #333
      height 73px
      margin-top 0 !important
      max-width 100%
      padding-top 8px
      position fixed
      text-align left
      top 0
      width 100%
      z-index 10
      
      .logo-container
        display inline-block
        height 53px
        margin-left 20px
        vertical-align middle
        
        span
          display none
          
        .show-in-fixed
          display inline-block
          height 100%
          
        .hide-in-fixed
          display none

      .menu-list
        display inline-block
        line-height 1
        margin-bottom 0
        margin-left -20px
        vertical-align middle

        li
          &::after
            content '  '
            
          &:not(:first-child)
            margin-left 12px

          a
            color black
            transition color 0.2s
            
            &:hover
              color $orange
        
  .white-box
    background white
    bottom -75px
    color black
    font-size 18px
    left 150px
    max-width 350px
    padding 38px 40px 10px 40px
    position absolute
    
    #homepage-special-form
      font-size 17px
      margin-top 20px

      input
        background none
        simple-border('bottom', 1px, $orange)
        padding 8px
        width 100%
        
        &:focus
          outline none
          
        &:not(:first-child)
          margin-top 10px
          
        &::placeholder
          font-weight $fontLight
          
      button
        margin-top 45px
        padding 8px 35px

.homepage-developments
  font-size $sectionTitleSize
  margin-bottom 30px
  center-block()
  margin-top 80px
  text-align center
  width 90%
  
  &-items
    center-block()
    margin-top 10px
    text-align center
    
    .item
      display inline-block
      width 45% !important
      
      &:nth-child(even)
        margin-left 20px
        
      &:nth-child(n + 3)
        margin-top 25px

      &-name
        margin-top 10px
        width 30%

      &-picture
        height auto
        width 100%
        
.homepage-cover-divider-1
  display flex
  height auto
  min-height 50vh
  
  .text-part
    background $orange
    text-align center
    min-width 350px
    width 28%
    
    img
      margin-bottom 45px
      margin-top 30px
      width 65%
      
    .white-box
      background white
      font-size 28px
      line-height 1.25
      margin-bottom 100px
      padding 30px 20px 30px 70px
      position relative
      text-align left
      width 130%
      z-index 2
    
  .image-part
    background-image url('../img/homepage_cover_divider_01.jpg')
    flex-grow 1
    position relative
    z-index 1
    
.homepage-contact-divider
  line-height 1.25
  margin 80px 20px
  
  span
    display block
    font-size $sectionTitleSize
    
  .orange-button
    margin-top 40px

.homepage-gray-divider
  background $lighterGray
  padding 60px 20px
  
  .container-360
    center-block()
    margin-top 20px
    max-width 900px
    min-width 280px
    width 80%
    
.homepage-cover-divider-2
  align-items shrink
  display flex
  height 50vh
  min-height 450px
  
  .image-part
    background-image url('../img/homepage_cover_divider_02.jpg')
    flex-grow 1

  .text-part
    position relative
    text-align right
    min-width 500px
    width 35%
    
    div
      bottom 60px
      position absolute
      right 80px

      span
        display block
        line-height 1.5
      
      .orange-button
        margin-top 20px
        
// Media queries
@media $mediumWindow
  .homepage-cover-divider-2 .text-part
    min-width 400px
    
@media $hybridMobileTablet
  .homepage-cover
    .phone-box .phone-box-content
      font-size 10px
      padding 10px 30px
      
      .big-text
        font-size 20px

    .white-box
      font-size 15px
      left 40px
      padding 20px

@media $smallBase
  .homepage-cover
    min-height 430px
  .homepage-developments .item
    width 100% !important
    margin-left 0 !important
    
    &:not(:first-child)
      margin-top 30px
      
    &:first-child
      margin-top 20px
  
  .homepage-contact-divider
    margin 55px 20px

  .homepage-cover-divider-1,
  .homepage-cover-divider-2
    display block
    height auto
    
    .text-part,
    .image-part
      display block
      width 100%
      
  .homepage-cover-divider-1
    .text-part
      min-width auto

      .white-box
        font-size 22px
        margin-bottom 0
        padding 30px 20px
        text-align center
        width 100%
      img
        max-width 280px
      
  .homepage-cover-divider-2
    min-height auto

    .text-part
      min-width auto

      div
        bottom initial
        left initial
        margin 40px 20px
        position relative
        right initial
        text-align center     

@media $smallPortrait
  .homepage-cover
    height 50vh

  .homepage-cover-divider-1 .image-part,
  .homepage-cover-divider-2 .image-part
    height 40vh
    
@media $smallLandscape
  .homepage-cover-divider-1 .image-part,
  .homepage-cover-divider-2 .image-part
    height 70vh

@media screen and (max-width: 480px)
  .homepage-cover .homepage-menu .logo-container
    font-size 30px
    
    img
      height 45px
      
  .homepage-cover .white-box
    left 50%
    width 280px
    transform translateX(-50%)
    
@media screen and (max-width: 320px)
  .homepage-cover
    height 60vh

    .homepage-menu
      margin-top 20px

      .logo-container
        font-size 25px
        
        img
          height 40px